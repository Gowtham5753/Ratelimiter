# FastAPI Rate Limiter Environment Configuration

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./rate_limiter.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/ratelimiter
# For MySQL: mysql+aiomysql://user:password@localhost:3306/ratelimiter

# Redis Configuration (Optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Application Settings
DEBUG=false
LOG_LEVEL=info
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Rate Limiter Settings
DEFAULT_REQUESTS_PER_WINDOW=100
DEFAULT_WINDOW_SECONDS=3600
DEFAULT_ALGORITHM=sliding_window
CLEANUP_INTERVAL_HOURS=24
CLEANUP_RETENTION_DAYS=7

# Security Settings
ADMIN_API_KEY=your-secret-admin-key
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
